{
  "name": "retrotube",
  "version": "1.0.0",
  "description": "A web app to access YouTube videos from retro browsers",
  "keywords": [
    "retrocomputing",
    "youtube",
    "newpipe",
    "retro",
    "web",
    "js",
    "streaming"
  ],
  "homepage": "https://github.com/queenkjuul/retrotube#readme",
  "bugs": {
    "url": "https://github.com/queenkjuul/retrotube/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/queenkjuul/retrotube.git"
  },
  "license": "GPL-3.0",
  "author": "queenkjuul",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "start": "node --env-file .env dist/index.js",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-dart-sass": "^1.0.4",
    "morgan": "^1.10.0",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.12.0",
    "@vitest/coverage-v8": "^3.0.4",
    "@vitest/eslint-plugin": "^1.1.25",
    "eslint": "^9.19.0",
    "eslint-plugin-perfectionist": "^4.7.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vitest": "^3.0.4"
  }
}
